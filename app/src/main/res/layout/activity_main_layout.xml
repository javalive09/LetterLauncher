<?xml version="1.0" encoding="utf-8"?>

<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/app_group_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/letter_width"
            android:gravity="center"/>

    <com.javalive09.letterlauncher.LetterRecyclerView
            android:id="@+id/letter_list"
            android:layout_width="@dimen/letter_width"
            android:layout_height="wrap_content"
            android:listSelector="@android:color/transparent"
            android:layout_gravity="end|center_vertical"/>

    <TextView
            android:id="@+id/letter_hint"
            android:layout_width="@dimen/letter_hint_width"
            android:layout_height="@dimen/letter_hint_height"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:visibility="gone"
            android:gravity="center"
            android:background="@drawable/letter_hint_bg"
            android:textSize="@dimen/letter_hint_size"/>

</merge>
